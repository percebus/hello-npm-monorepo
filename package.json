{
  "name": "hello-npm-monorepo",
  "version": "0.1.0",
  "description": "npm monorepo",
  "workspaces": [
    "node/*"
  ],
  "private": true,
  "scripts": {
    "npm:install:global": "npm install --location global yarn",
    "setup": "npm run npm:install:global",
    "setup:ci": "npm run setup",
    "rm:node_modules": "rm -rf ./node_modules",
    "preyarn:ci": "yarn run rm:node_modules",
    "yarn:ci": "yarn install --frozen-lockfile",
    "prettier": "prettier .",
    "prettier:write": "npm run prettier -- --write",
    "prettier:check": "npm run prettier -- --check",
    "dockerlint": "dockerlint Dockerfile",
    "lint": "npm run prettier:check && npm run dockerlint",
    "style": "npm run prettier:write",
    "poststyle": "npm run lint",
    "sub:express-app": "npm --prefix ./node/express-app",
    "sub:express-app:test": "npm run sub:express-app -- test",
    "sub:express-app:echo": "npm run sub:express-app -- run echo",
    "sub:package-b": "npm --prefix ./node/package-b",
    "sub:package-b:test": "npm run sub:package-b -- test",
    "sub:package-b:echo": "npm run sub:package-b -- run echo",
    "sub:package-c": "npm --prefix ./node/package-c",
    "sub:package-c:test": "npm run sub:package-c -- test",
    "sub:package-c:echo": "npm run sub:package-c -- run echo",
    "pretest": "npm run lint",
    "test": "npm run sub:express-app:test && npm run sub:package-b:test && npm run sub:package-c:test",
    "echo": "npm run sub:express-app:echo && npm run sub:package-b:echo && npm run sub:package-c:echo",
    "predev": "npm run style",
    "dev": "npm run sub:express-app:test && npm run sub:package-b:test && npm run sub:package-c:test",
    "docker:compose:up": "docker compose up --build"
  },
  "author": "JCystems",
  "license": "SEE LICENSE IN LICENSE.md",
  "devDependencies": {
    "dockerlint": "^0.3.9",
    "prettier": "^3.4.2"
  }
}
